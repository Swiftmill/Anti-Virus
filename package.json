{
  "name": "vortex-antivirus",
  "version": "1.0.0",
  "description": "Vortex - Educational desktop antivirus built with Electron and React",
  "main": "electron/main.ts",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "concurrently \"vite\" \"npm:dev:electron\"",
    "dev:electron": "wait-on tcp:5173 && electron -r ts-node/register/transpile-only electron/main.ts",
    "build": "vite build && tsc -p electron/tsconfig.json",
    "lint": "eslint --ext .ts,.tsx src"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.10",
    "electron-store": "^8.1.0",
    "fs-extra": "^11.1.1",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "wait-on": "^7.0.1"
  }
}
